    <com.jjoe64.graphview.GraphView
        android:id="@+id/fftView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/psdView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/bandsView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>