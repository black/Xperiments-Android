<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_normal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/resp_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/resp_simple"/>
        <TextView
            android:id="@+id/resp_title"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="21sp"
            android:textAllCaps="true"
            android:text="@string/res_yes"/>
        <TextView
            android:id="@+id/resp_description"
            android:textColor="@color/black70"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/res_yes"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/resp_more"
        android:padding="8dp"
        android:src="@drawable/ic_tile_more"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>